{
    "manifest_version": 2,
    "name": "Dalennod",
    "version": "0.2.0",
    "description": "A bookmark manager.",
    "icons": {
        "48": "icons/dalennod-48.png",
        "96": "icons/dalennod-96.png"
    },
    "homepage_url": "https://github.com/dalennod/dalennod",
    "permissions": ["tabs", "storage"],
    "browser_action": {
        "default_icon": {
            "48": "icons/dalennod-48.png",
            "96": "icons/dalennod-96.png"
        },
        "default_title": "Dalennod",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false,
        "type": "module"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
